#!/usr/bin/env bash

# prefer vim
EDITOR=$(which vim)
export EDITOR

# Environment
export TZ=US/Eastern
# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG="en_US"

# ignore duplicate history lines
export HISTCONTROL="erasedupes:ignoreboth"

# Larger bash history
export HISTSIZE=100000
export HISTFILESIZE=${HISTSIZE}

# set timestamps in history
export HISTTIMEFORMAT='%F %T '

# highlighting inside manpages and elsewhere
export LESS_TERMCAP_mb=$'\E[01;31m'       # begin blinking
export LESS_TERMCAP_md=$'\E[01;38;5;74m'  # begin bold
export LESS_TERMCAP_me=$'\E[0m'           # end mode
export LESS_TERMCAP_se=$'\E[0m'           # end standout-mode
export LESS_TERMCAP_so=$'\E[38;5;246m'    # begin standout-mode - info box
export LESS_TERMCAP_ue=$'\E[0m'           # end underline
export LESS_TERMCAP_us=$'\E[04;38;5;146m' # begin underline

# Link Homebrew casks in `/Applications` rather than `~/Applications`
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# aws-cli config file
export AWS_CONFIG_FILE="$HOME/.aws/config"

# use homebrew coreutils manpages
export MANPATH="/usr/local/opt/coreutils/libexec/gnuman:$MANPATH"

# NVM
export NVM_DIR="$HOME/.nvm"

# CPAN Stuff
export PERL5LIB="/Users/bradclark/perl5/lib/perl5${PERL5LIB:+:${PERL5LIB}}";
export PERL_LOCAL_LIB_ROOT="/Users/bradclark/perl5${PERL_LOCAL_LIB_ROOT:+:${PERL_LOCAL_LIB_ROOT}}";
export PERL_MB_OPT='--install_base "/Users/bradclark/perl5"';
export PERL_MM_OPT="INSTALL_BASE=/Users/bradclark/perl5";

###
# PATH

# homebrew applications
# PATH="/usr/local/bin:$PATH"
PATH="/usr/local/sbin:$PATH"

# don't auto-cleanup homebrew
HOMEBREW_NO_INSTALL_CLEANUP="true"

# Add brew coreutils to $PATH
PATH="$(brew --prefix coreutils)/libexec/gnubin:$PATH"

# Heroku Toolbelt
PATH="$PATH:/usr/local/heroku/bin"

# CPAN
PATH="$PATH:/Users/bradclark/perl5/bin"

# kubectl krew
[[ -d "${KREW_ROOT:-$HOME/.krew}/bin" ]] && PATH="${KREW_ROOT:-$HOME/.krew}/bin:$PATH"

# set PATH so it includes user's private bin if it exists
[[ -d "$HOME/bin" ]] && PATH="$HOME/bin:$PATH"

# Add RVM to PATH for scripting
PATH="$HOME/.rvm/bin:$PATH"

export PATH
###

# java home
#export JAVA_HOME=$(/usr/libexec/java_home)

# here's LS_COLORS
# github.com/trapd00r/LS_COLORS
command -v gdircolors >/dev/null 2>&1 || alias gdircolors="dircolors"
eval "$(gdircolors -b ~/.dircolors)"
