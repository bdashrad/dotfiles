# gitconfig
# see the following pages for inspiration
# - https://motlin.medium.com/git-config-3d20c4c079ba
# - https://blog.gitbutler.com/git-tips-and-tricks
# - https://blog.gitbutler.com/how-git-core-devs-configure-git
# - https://git-scm.com/book/en/v2
# - https://git-scm.com/book/en/v2/Customizing-Git-Git-Configuration
# - https://scottchacon.com/2010/03/08/rerere


[alias]
  # shorten some commonly used commands
  st = status

  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lgg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --name-only
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  ld = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short --graph
  ls = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative

  l = log \
        --graph \
        --decorate \
        --date=short \
        --format=format:'%C(auto)%(decorate:prefix=ðŸ‘‡ ,suffix=%n,tag=,separator= )%C(reset)%C(brightyellow)%h%C(reset) %C(normal)%<|(-50,trunc)%s%C(reset) %C(brightmagenta)%<(15,trunc)%an%C(reset) %C(brightblue)%ad%C(reset) %C(brightcyan)%ar%C(reset)'

  laa = l --all

  la = l \
        --exclude=refs/prefetch/* \
        --exclude=refs/remotes/origin/pr/* \
        --exclude=refs/remotes/upstream/pr/* \
        --exclude=refs/remotes/origin/dependabot/* \
        --exclude=refs/notes/tests/* \
        --exclude=refs/stash \
        --all

  decorate = la --simplify-by-decoration

  # Show the diff between the latest commit and the current state
  d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
  df = diff --color --color-words --abbrev

  # add a command to squash work in progress that hasn't been pushed
  wip = rebase -i @{u}

  # Head branches
  cdef = "!git checkout $(git originhead)"
  default = "!git checkout $(git originhead)"
  originhead = "!git remote show origin | awk '$0 ~ \"HEAD branch\" {print $NF}'"

  # sha
  sha-short = rev-parse --short HEAD
  sha = rev-parse HEAD
  remote-sha-short = rev-parse --short @{u}
  remote-sha = rev-parse @{u}

  # Diff tools
  vimdiff = difftool --tool=vimdiff
  vsdiff = difftool --tool=vscode

[branch]
  sort = -committerdate
  autoSetupRebase = always

[color]
  ui = always

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  commit = green bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[column]
  ui = auto

[commit]
  gpgsign = true

[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes

[credential]
  helper = store

[delta]
  dark = true
  navigate = true   # use n and N to move between diff sections
  hyperlinks = true # create hyperlinks to files and commits
  hyperlinks-file-link-format = "vscode://file/{path}:{line}"

# git diff
[diff]
  tool = p4merge
  colorMoved = zebra
  algorithm = histogram
  mnemonicPrefix = true
  renames = copies

[difftool]
  prompt = false

[difftool "kdiff3"]
  path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
  trustExitCode = false

[difftool "opendiff"]
  path = /usr/bin/opendiff
  trustExitCode = false

[difftool "p4merge"]
  cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$LOCAL" "$REMOTE"

[difftool "vscode"]
  cmd = code --diff $LOCAL $REMOTE

[feature]
  experimental = true

[fetch]
  prune = true
  pruneTags = true
  all = true

[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f

[gpg]
  program = gpg
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
  allowedsignersfile = ~/.ssh/allowed_signers

[grep]
  patternType = perl

[help]
  # autocorrect = prompt
  autocorrect = 50

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  tool = p4merge
  prompt = true
  conflictstyle = zdiff3
  # autostash = true

[mergetool]
  keepTemporaries = false
  keepBackup = false

[mergetool "kdiff3"]
  path = /Applications/kdiff3.app/Contents/MacOS/kdiff3
  trustExitCode = false

[mergetool "opendiff"]
  cmd = /usr/bin/opendiff "$LOCAL" "$REMOTE" -ancestor "$BASE" -merge "$MERGED"
  trustExitCode = false

[mergetool "p4merge"]
  cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
  trustExitCode = false

[mergetool "vscode"]
  conflictstyle = zdiff3
  cmd = code --wait"$MERGED"
  trustExitCode = false

[pager]
  log = delta
  diff = delta
  show = delta

[protocol]
  version = 2

# push easily. http://stackoverflow.com/a/23918418/89484
[push]
  default = current
  autoSetupRemote = true
  # followTags = true

[pull]
  ff = only
	twohead = ort

[rebase]
  autoStash = true
  autoSquash = true
  updateRefs = true

[rerere]
	enabled = true
  autoupdate = true

[stash]
  showPatch = true

[tag]
  forceSignAnnotated = true
  sort = version:refname

